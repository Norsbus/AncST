import os
import pathlib

code_dir = config['code_dir']

work_dir = config['work_dir']

root = config['root_dir']

# env variable
os.environ['TMPDIR'] = f'{root}/utils/tmp'

envvars:
    "TMPDIR",

# Check if dups_params.txt exists and has content
# Dups parameters are optional - if missing or empty, create empty dups files and exit
dups_params_exist = os.path.isfile(f"{work_dir}/dups_params.txt")
if dups_params_exist:
    with open(f"{work_dir}/dups_params.txt","r") as f:
        content = f.read().strip()
        if content and not content.startswith('#'):
            params = content.split()
            if len(params) >= 7:
                genome,K,E,L,I,P,XXX = params[:7]
            else:
                print(f"Warning: dups_params.txt has insufficient parameters")
                dups_params_exist = False
        else:
            print(f"Info: dups_params.txt is empty or only has comments")
            dups_params_exist = False
else:
    print(f"Info: dups_params.txt not found - dups are optional")

# organisms to compute for
orgs = []
with open(f"{work_dir}/compute_anchors_for","r") as f:
    for line in f:
        orgs.append(line.strip())

# If no dups parameters, create empty dups files for all organisms and skip workflow
if not dups_params_exist:
    import pickle
    os.makedirs(f"{work_dir}/dups", exist_ok=True)
    for org in orgs:
        with open(f"{work_dir}/dups/{org}", 'wb') as f:
            pickle.dump({}, f)
    print(f"Created empty dups files for {len(orgs)} organisms")

    # Create dummy rule that does nothing (snakemake requires at least one rule)
    rule all:
        input:
                []
else:
    # Normal workflow with actual dups computation
    rule all:
        input:
                expand(f"{work_dir}/dups/{{organism}}",organism=orgs)

    rule get_dups:
        input:
                f"{root}/utils/genomes/{{organism}}.fasta"
        log:
                err = f"{work_dir}/logs/dups/{{organism}}.err",
                out = f"{work_dir}/logs/dups/{{organism}}.out"
        output:
                f"{work_dir}/dups/{{organism}}",
        params:
                k = K,
                e = E,
                l = L,
                i = I,
                p = P
        resources:
                cpus_per_task=1,
                mem_mb=64000
        threads:
                1
        conda:
                "snakemake"
        shell:
                f'{code_dir}/find_dups.py {{wildcards.organism}} {root}/utils/genmap_out/{{wildcards.organism}}/{K}_{E}.freq16 {{params.l}} {{params.i}} {{params.p}} 1> {{log.out}} 2> {{log.err}} {work_dir}'
